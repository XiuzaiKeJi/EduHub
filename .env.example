# 前端配置
VITE_APP_TITLE=EduHub管理系统
VITE_APP_API_BASE_URL=https://api.example.com/api/v1
VITE_APP_UPLOAD_URL=https://api.example.com/api/v1/upload

# 后端配置
PORT=3001
NODE_ENV=production
API_SECRET=<your-api-secret>
JWT_SECRET=<your-jwt-secret>
DB_PATH=./data/prod.sqlite
CORS_ORIGIN=https://example.com

# 日志配置
LOG_LEVEL=info
LOG_PATH=./logs/prod

# 数据库配置
DB_BACKUP_PATH=/backup/eduhub/data

# 邮件配置（可选）
SMTP_HOST=<smtp-server>
SMTP_PORT=587
SMTP_USER=<smtp-user>
SMTP_PASS=<smtp-password> 