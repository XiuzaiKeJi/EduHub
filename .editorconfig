# EditorConfig is awesome: https://EditorConfig.org

# 顶层配置文件
root = true

# 所有文件通用配置
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Markdown 文件
[*.md]
trim_trailing_whitespace = false

# TypeScript 和 JavaScript 文件
[*.{ts,js,tsx,jsx}]
quote_type = single
max_line_length = 100

# JSON 文件
[*.json]
insert_final_newline = false

# YAML 文件
[*.{yml,yaml}]
indent_size = 2

# Shell 脚本
[*.sh]
indent_size = 4

# CSS/SCSS/LESS 文件
[*.{css,scss,less}]
indent_size = 2 